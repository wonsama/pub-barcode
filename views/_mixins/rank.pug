//- rank.pug
mixin rank(p, username)
  table.table.table-hover
    caption.text-lime #{t("table.caption.rank")}
    thead
      tr
        th(scope="col") #
        th(scope="col") #{t("table.header.runner")}
        th(scope="col") #{t("table.header.moved")}
        th(scope="col") #{t("table.header.time_lastjoin")}
    tbody
      each item, no in p
        if username == item.username
          tr.text-white
            +_rank(no, item)
        else 
          tr
            +_rank(no, item)

mixin _rank(no, item)
  td #{no+1}
  td
    img.circle(src=`https://steemitimages.com/u/${item.username}/avatar` alt=`${item.username}`)
    | &nbsp; #{item.username}
  td #{item.moved}m
  td #{item.time}